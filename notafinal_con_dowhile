// nota final do while.cpp : Defines the entry point for the console application.
//


#include "stdafx.h"
#include "conio.h"
#include <iostream>
using namespace std;

void main()
{
int id,n,Np,Ef,Pp,Sp,Tp,Nf;
float nf;
char resp;
do
         {cout<< " ID: ";
          cin>> id;
          cout<<"ingrese nota primer parcial:"<< endl;
          cin>>Pp;
          cout<<"ingrese nota segundo parcial:"<< endl;
          cin>>Sp;
		  cout<<"ingrese nota tercer parcial:"<< endl;
          cin>>Tp;
          cout<<"ingrese nota practica:"<< endl;
          cin>>Np;
          cout<<"ingrese nota examen final:"<< endl;
          cin>>Ef;
          Nf=(((Pp+Sp+Tp)/3)*0.4)+(Np*0.2)+(Ef*0.4);
          cout<<"la nota final es de:"<<Nf<< endl;
		  cout<< " Desea continuar (y) o (n) ";
          cin>> resp;
		  } while (resp!='n');
           getch();
        }
