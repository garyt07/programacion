#include "conio.h"
#include<iostream>
#include<cmath>
using namespace std;





int main() {
	
	float a,area,b,c,p;
	
	cout << "ingrese un lado a: " << endl;
	cin >> a;
	cout << "ingrese lado b: " << endl;
	cin >> b;
	cout << "ingrese lado c: " << endl;
	cin >> c;
	p = (a+b+c)/2;
	area = sqrtf(p*(p-a)*(p-b)*(p-c));
	cout << "el area es: " << area << endl;
	getch();
     return 0;
       
}

